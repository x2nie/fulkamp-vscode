{
  "scopeName": "source.fulkamp",
  "patterns": [
    { "include": "#comments" },
    { "include": "#decorators" },
    { "include": "#top_level_names" },
    { "include": "#functions" },
    { "include": "#property-line" },
    { "include": "#scalars" }
  ],
  "repository": {
    "colors": {
        "patterns": [
            {
            "name": "constant.other.color.hex.fulkamp",
            "match": "(?<!\\S)#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})\\b"
            }
        ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fulkamp",
          "match": "\".*$"
        }
      ]
    },
    "top_level_names": {
        "patterns": [
            {
            "name": "entity.name.function.fulkamp",
            "match": "^(?!\\s)(?!@)(?!\")(\\S+)"
            }
        ]
    },

    "decorators": {
      "patterns": [
        {
            "name": "storage.type.contract.fulkamp",
            "match": "^\\s*(@[a-zA-Z_][\\w-]*)"
        }
      ]
    },

    "functions": {
      "patterns": [
        {
          "name": "meta.function-call.fulkamp",
          "begin": "=",
          "beginCaptures": {
            "0": { "name": "keyword.operator.formula.fulkamp" }
          },
          "end": "$",
          "patterns": [
            {
              "name": "entity.name.function.fulkamp",
              "match": "\\b[A-Z_][A-Z0-9_]*\\b"
            },
            {
              "include": "#scalars"
            },
            {
              "name": "punctuation.parenthesis.fulkamp",
              "match": "[(),]"
            }
          ]
        }
      ]
    },

    "property-line": {
      "patterns": [
        {
          "name": "meta.property-line.fulkamp",
          "begin": "^\\s*(?!@)([#a-zA-Z_][\\/\\.\\w.-]*)",
          "beginCaptures": {
            "1": {
              "name": "variable.other.property.fulkamp"
            }
          },
          "end": "$",
          "patterns": [
              { "include": "#comments" },
             { "include": "#colors" },
             { "include": "#scalars" },
            {
              "name": "variable.parameter.function.fulkamp",
              "match": "\\b[#a-zA-Z_][\\w.-]*\\b"
            }
          ]
        }
      ]
    },

    "scalars": {
      "patterns": [
        {
          "name": "constant.numeric.fulkamp",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        },
        {
          "name": "string.quoted.double.fulkamp",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "constant.language.boolean.fulkamp",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.fulkamp",
          "match": "\\bnull\\b"
        }
      ]
    }
  }
}
